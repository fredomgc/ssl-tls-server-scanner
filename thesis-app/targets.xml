<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<profiles>
		<profile name="low">			
			
			<protocols>
				<protocol name="SSLv2"  mode="mustNotBe"  />
				<protocol name="SSLv3"  mode="mustNotBe"  />
				<protocol name="TLS 1.0"  mode="mustNotBe"  />
				<protocol name="TLS 1.1"  mode="mustNotBe"  />
				<protocol name="TLS 1.2"  mode="mustNotBe" />
			</protocols>
			
			<vulnerabilitiesFree mode="canBe"/>
			
			<certificateValid  mode="canBe">
				<directive name="rsaMinimumPublicKeySize" value="2048"  mode="mustBe" />
				<directive name="rsaMinimumSignatureKeySize" value="2048"  mode="mustBe" />
				<directive name="ecdsaMinimumPublicKeySize" value="128"  mode="mustBe"  />
				<directive name="ecdsaMinimumSignatureKeySize" value="128"  mode="mustBe"  />
			</certificateValid>
			
			<ciphers>
				<cipher name="ECDHE-ECDSA-DES-CBC3-SHA"  mode="mustNotBe"  />
				<cipher name="DHE-RSA-CAMELLIA128-SHA"  mode="mustBe"  />
				<cipher name="ECDHE-ECDSA-RC4-SHA"  mode="canBe"  />
			</ciphers>
		</profile>
	</profiles>
	
	<targets>
		<target destination="https://127.0.0.1/"  profile="low"  name="my localhost #1" />
	</targets>
</configuration>